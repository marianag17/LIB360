									<li><a href="@Url.Action("Index","Prestamo")"><i class="las la-th-list"></i>Manejar préstamos</a></li>
								</ul>
							</li>

						</ul>



					</nav>
				</div>
			</div>
			<!-- TOP Nav Bar -->
			<div class="iq-top-navbar">
				<div class="iq-navbar-custom">
					<nav class="navbar navbar-expand-lg navbar-light p-0">
						<div class="iq-menu-bt d-flex align-items-center">
							<div class="wrapper-menu">
								<div class="main-circle"><i class="ri-arrow-left-s-line"></i></div>
								<div class="hover-circle"><i class="ri-arrow-right-s-line"></i></div>
							</div>
							<div class="iq-navbar-logo d-flex justify-content-between">
								<a href="@Url.Action("Index","Home")" class="header-logo">
									<img src="images/grid (1).svg" class="img-fluid rounded-normal" alt="">
									<div class="pt-2 pl-2 logo-title">
										<span class="text-danger text-uppercase">LIB<span class="text-primary ml-1">360</span></span>
									</div>
								</a>
							</div>
						</div>
						<div class="navbar-breadcrumb">
							<h4 class="mb-0 text-dark">Inicio</h4>
							<p class="mb-0"><span class="text-danger">Administrador</span></p>
						</div>
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-label="Toggle navigation">
							<i class="ri-menu-3-line"></i>
						</button>
						<div class="collapse navbar-collapse" id="navbarSupportedContent">
							<ul class="navbar-nav ml-auto navbar-list">
								<li class="nav-item nav-icon">
									<div class="iq-search-bar">
										<form action="#" class="searchbox">
											<input type="text" class="text search-input" placeholder="Buscar">
											<a class="search-link" href="#"><i class="ri-search-line"></i></a>
										</form>
									</div>
								</li>

								<ul class="navbar-list">
									<li class="line-height">
										<a href="#" class="search-toggle iq-waves-effect d-flex align-items-center">
											<img src="~/Content/images/user/user.png" class="img-fluid rounded-circle" alt="user">
										</a>
										<div class="iq-sub-dropdown iq-user-dropdown">
											<div class="iq-card shadow-none m-0">
												<div class="iq-card-body p-0 ">
													<div class="bg-primary p-3">
														<h5 class="mb-0 text-white line-height">Hola, @Session["UserName"]</h5>
													</div>


													<div class="d-inline-block w-100 text-center p-3">
														<a class="bg-primary iq-sign-btn" href="@Url.Action("SignUp","Usuario")" role="button">Cerrar sesión<i class="ri-login-box-line ml-2"></i></a>
													</div>
												</div>
											</div>
										</div>
									</li>

								</ul>
							</ul>
						</div>
					</nav>

				</div>
			</div>
			<!-- TOP Nav Bar END -->

		</div>
	}

